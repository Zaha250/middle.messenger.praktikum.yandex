---
title: Регистрация
css:
    - index.scss
    - auth.scss
---
{{!< base}}

<main class="main">
    <form class="form form_reg">
        <div>
            <h2 class="form__title">Регистрация</h2>
            <div class="form-fields">
                {{> input type="text" name="email" placeholder="Почта" value="" classes="form__input"}}
                {{> input type="text" name="login" placeholder="Логин" value="" classes="form__input"}}
                {{> input type="text" name="first_name" placeholder="Имя" value="" classes="form__input"}}
                {{> input type="text" name="second_name" placeholder="Фамилия" value="" classes="form__input"}}
                {{> input type="phone" name="phone" placeholder="Телефон" value="" classes="form__input"}}
                {{> input type="password" name="password" placeholder="Пароль" value="" classes="form__input"}}
                {{> input type="password" name="password" placeholder="Пароль (ещё раз)" value="" classes="form__input"}}
            </div>
        </div>
        <div class="form-footer">
            <button class="btn btn_primary form__btn">Зарегистрироваться</button>
            <a href="./auth.hbs" class="form__link">Войти</a>
        </div>
    </form>
</main>