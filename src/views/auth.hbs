---
title: Авторизация
css:
    - index.scss
    - auth.scss
---
{{!< base}}

<main class="main">
    <form class="form">
        <div>
            <h2 class="form__title">Вход</h2>
            <div class="form-fields">
                {{> input type="text" name="login" placeholder="Логин" value="" classes="form__input"}}
                {{> input type="password" name="password" placeholder="Пароль" value="" classes="form__input"}}
            </div>
        </div>
        <div class="form-footer">
            <button class="btn btn_primary form__btn">Авторизоваться</button>
            <a href="./reg.hbs" class="form__link">Нет аккаунта?</a>
        </div>
    </form>
</main>